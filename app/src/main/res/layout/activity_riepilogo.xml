<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_riepilogo"
    android:layout_width="600dp"
    android:layout_gravity="center"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:orientation="vertical"
    tools:context="com.example.adrianacarelli.sharedpreferencesexample.activity.RiepilogoActivity">

    <TextView
        android:text="Il tuo nome è;"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/textView"
        android:padding="@dimen/padding_edittext"
        android:textColor="@color/colorPrimary"/>

    <TextView
        android:text="TextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/textNome"
        android:textStyle="bold"
        android:textSize="30sp"
        android:gravity="center_horizontal"
        android:padding="@dimen/padding_edittext"/>

    <TextView
        android:text="Il tuo cognome è:"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/textView3"
        android:padding="@dimen/padding_edittext"
        android:textColor="@color/colorPrimary"/>

    <TextView
        android:text="TextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:gravity="center_horizontal"
        android:textSize="30sp"
        android:id="@+id/textCognome"
        android:padding="@dimen/padding_edittext"
        />

    <TextView
        android:text="La tua mail è:"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/textView5"
        android:padding="@dimen/padding_edittext"
        android:textColor="@color/colorPrimary"/>

    <TextView
        android:text="TextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:textSize="30sp"
        android:gravity="center_horizontal"
        android:id="@+id/textEmail"
        android:padding="@dimen/padding_edittext"
        />

    <TextView
        android:text="il tuo telefono è:"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/textView8"
        android:padding="@dimen/padding_edittext"
        android:textColor="@color/colorPrimary"/>

    <TextView
        android:text="TextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/textPhone"
        android:textStyle="bold"
        android:textSize="30sp"
        android:gravity="center_horizontal"
        android:padding="@dimen/padding_edittext"/>
</LinearLayout>
